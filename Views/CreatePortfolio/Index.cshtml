                        @Html.ActionLink("Add", "Index", "MyExperience", null, new { @class = "btn btn-primary pl-4 pr-4" })
                    }
                    else
                    {
                        @Html.ActionLink("Edit", "Index", "MyExperience", null, new { @class = "btn btn-warning pl-4 pr-4" })
                    }
                </td>

