@model MyPortfolio.Models.Experience
@{
    ViewBag.Title = "Save Experience";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-danger border-bottom pb-3">Experience</h2>
    </div>

    @using (Html.BeginForm("SaveExperience", "MyExperience", FormMethod.Post, new { @class = "Form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.ExperienceId)
        @Html.HiddenFor(m => m.PortfolioUserId)

        <div class="form-group row">
            @Html.LabelFor(m => m.ExperienceType, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.DropDownListFor(m => m.ExperienceType,
                                       new List<SelectListItem> {
                                            new SelectListItem { Text = "Job", Value = "Job" },
                                            new SelectListItem { Text = "Internship", Value = "Internship" }
                                       },
                                       new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ExperienceType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Designation, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Designation, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Designation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.OrganizationName, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.OrganizationName, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OrganizationName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.JoiningDate, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.JoiningDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.JoiningDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.EndDate, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control" , type = "date" })
                @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Skills, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Skills, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Skills, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-row">
            <div class="col-md-9 offset-md-3">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>
        

        <div class="form-group-row mt-2">
            <div class="col-md-9 offset-md-3">
                @Html.ActionLink("Back", "Index", "MyExperience", null, new { @class = "btn btn-secondary" })
            </div>
        </div>

    }
</div>

