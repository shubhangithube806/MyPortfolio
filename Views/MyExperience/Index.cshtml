@model List<MyPortfolio.Models.Experience>

@{
    ViewBag.Title = "Experience List";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-danger border-bottom pb-3">Experience List</h2>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var experience in Model)
                {
                    <div class="col-md-4 mb-4 d-flex align-experience-stretch">
                        <div class="card shadow-sm w-100">
                            <div class="card-body d-flex flex-column">

                                <h5 class="card-title">@experience.ExperienceType</h5>

                                <h6 class="card-subtitle mb-2">@experience.Designation</h6>

                                <p class="card-text">

                                    <strong>Organization Name: </strong>@experience.OrganizationName <br />

                                    <strong>Joining Date: </strong>@experience.JoiningDate <br />

                                    @if (experience.EndDate.HasValue)
                                    {
                                        <strong>End Date: </strong>@experience.EndDate.Value <br />
                                    }

                                    <strong>Description: </strong>@experience.Description <br />


                                    <strong>Skills: </strong>@experience.Skills
                                </p>                               

                                <div class="mt-auto d-flex justify-content-between">

                                    @Html.ActionLink("Edit", "SaveExperience", "MyExperience",
                                                    new { experienceId = experience.ExperienceId },
                                                    new { @class = "btn btn-success btn-sm" })

                                    @Html.ActionLink("Delete", "DeleteExperience", "MyExperience",
                                                    new { experienceId = experience.ExperienceId },
                                                    new { @class = "btn btn-danger btn-sm" })
                                </div>
                            </div>
                        </div>

                    </div>
                }
        </div>

    }


    else
    {
        <div class="alert alert-info text-center">
            No experience records found. Add your experience by clicking the "Add New Experience" button.
        </div>
    }

    <div class="text-center">
        @Html.ActionLink("Add New Experience", "SaveExperience", "MyExperience", null, new { @class = "btn btn-primary"} )
    </div>

    <div class="text-center mt-3">
        @Html.ActionLink("Back", "Index", "CreatePortfolio", null, new { @class = "btn btn-secondary" })
    </div>


</div>

