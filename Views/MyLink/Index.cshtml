@model List<MyPortfolio.Models.Link>
@{
    ViewBag.Title = "Link List";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-danger border-bottom pb-3">Link List</h2>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var link in Model)
            {
                <div class="col-md-4 mb-4 d-flex align-experience-stretch">
                    <div class="card shadow-sm w-100">
                        <div class="card-body d-flex flex-column">

                            <p class="card-text">

                                <strong>Link Text: </strong>@link.LinkText <br />

                                <strong>Link Type: </strong>@link.LinkType  <br />

                            </p>

                            <div class="mt-auto d-flex justify-content-between">

                                @Html.ActionLink("Edit", "SaveLink", "MyLink",
                                                new { linkId = link.LinkId },
                                                new { @class = "btn btn-success btn-sm" })

                                @Html.ActionLink("Delete", "DeleteLink", "MyLink",
                                                new { linkId = link.LinkId },
                                                new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>

    }

    else
    {
        <div class="alert alert-info text-center">
            No link records found. Add your link by clicking the "Add New Link" button.
        </div>
    }

    <div class="text-center">
        @Html.ActionLink("Add New Link", "SaveLink", "MyLink", null, new { @class = "btn btn-primary" })
    </div>

    <div class="text-center mt-3">
        @Html.ActionLink("Back", "Index", "CreatePortfolio", null, new { @class = "btn btn-secondary" })
    </div>

</div>
