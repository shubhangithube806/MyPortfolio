@model List<MyPortfolio.Models.Skill>
@{
    ViewBag.Title = "Skill List";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-danger border-bottom pb-3">Skill List</h2>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="container my-4">

            <div class="row">

                <div class="col-12 col-md-9 col-lg-6 mx-auto">

                    <div class="card shadow-sm">

                        <div class="card-body text-center">

                            <div class="card-text">

                                @foreach (var skill in Model)
                                {
                                    <a href="@Url.Action("SaveSkill", "MySkill", new { skillId = skill.SkillId })" class="badge bg-success text-white fs-3 p-2 mx-2 my-2 text-decoration-none">
                                        @skill.Name
                                    </a>
                                }

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No skill records found. Add your skill by clicking the "Add New skill" button.
        </div>
    }

    <div class="text-center">
        @Html.ActionLink("Add New Skill", "SaveSkill", "MySkill", null, new { @class = "btn btn-primary" })
    </div>

    <div class="text-center mt-3">
        @Html.ActionLink("Back", "Index", "CreatePortfolio", null, new { @class = "btn btn-secondary" })
    </div>

</div>

