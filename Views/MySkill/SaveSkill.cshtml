@model MyPortfolio.Models.Skill

@{
    ViewBag.Title = "Save Skill";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-danger border-bottom pb-3">Skill</h2>
    </div>

    @using (Html.BeginForm("SaveSkill", "MySkill", FormMethod.Post, new { @class = "Form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.SkillId)
        @Html.HiddenFor(m => m.PortfolioUserId)

        <div class="form-group row">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-row">
            <div class="col-md-9 offset-md-3">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>


        <div class="form-group-row mt-2">
            <div class="col-md-9 offset-md-3">
                @Html.ActionLink("Back", "Index", "MySkill", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }


</div>
