@model MyPortfolio.Models.Course
@{
    ViewBag.Title = "Save Course";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-danger border-bottom pb-3">Course</h2>
    </div>

    @using (Html.BeginForm("SaveCourse", "MyCourse", FormMethod.Post, new { @class = "Form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.CourseId)
        @Html.HiddenFor(m => m.PortfolioUserId)

        <div class="form-group row">
            @Html.LabelFor(m => m.CourseName, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.CourseName, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CourseName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.CoursePlatform, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.CoursePlatform, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CoursePlatform, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.StartDate, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", Type = "date" })
                @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.EndDate, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", Type = "date" })
                @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Skills, new { @class = "col-md-3 col-form-label" })

            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Skills, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Skills, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-row">
            <div class="col-md-9 offset-md-3">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>


        <div class="form-group-row mt-2">
            <div class="col-md-9 offset-md-3">
                @Html.ActionLink("Back", "Index", "MyCourse", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</div>

